<%- include('partials/head') %>
<%- include('partials/navbar', { page: '/login' }) %>

<main class="min-h-screen bg-base-200 flex items-center justify-center px-4">
  <div class="bg-base-100 p-8 rounded-xl shadow-xl w-full max-w-lg">
    <h2 class="text-3xl font-bold text-center mb-2">Log In</h2>
    <p class="text-center mb-6 text-gray-500">Please provide your credentials below</p>

    <% if (errorMessage) { %>
      <div class="alert alert-error mb-4"><%= errorMessage %></div>
    <% } %>

    <form method="POST" action="/login" class="space-y-4">
      <input type="text" name="userName" placeholder="User Name" required class="input input-bordered w-full" />
      <input type="password" name="password" placeholder="Password" required class="input input-bordered w-full" />
      <button type="submit" class="btn btn-success w-full">Login</button>
    </form>

    <p class="mt-4 text-center text-sm">
      Donâ€™t have an account? <a href="/register" class="link link-primary">Register here</a>
    </p>
  </div>
</main>
