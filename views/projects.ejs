<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Projects | Climate Solutions</title>
</head>
<body class="bg-base-200">
    <%- include('partials/navbar', { page: "/solutions/projects" }) %>

    <!-- Hero Section -->
    <div class="hero bg-primary text-primary-content py-12">
        <div class="hero-content text-center">
            <div class="max-w-2xl">
                <h1 class="text-5xl font-bold mb-6">Our Projects</h1>
                <div class="flex gap-4 justify-center">
                    <a href="/solutions/projects?sector=energy" class="btn btn-secondary">Energy</a>
                    <a href="/solutions/projects?sector=agriculture" class="btn btn-secondary">Agriculture</a>
                    <a href="/solutions/projects?sector=transportation" class="btn btn-secondary">Transportation</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Projects Table -->
    <div class="container mx-auto px-4 py-12">
        <table class="table table-zebra">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Sector</th>
                    <th>Summary</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% projects.forEach(project => { %>
                <tr>
                    <td><%= project.title %></td>
                    <td>
                        <a href="/solutions/projects?sector=<%= project.sector %>" 
                           class="btn btn-xs btn-outline">
                            <%= project.sector %>
                        </a>
                    </td>
                    <td><%= project.summary_short %></td>
                    <td>
                        <a href="/solutions/projects/<%= project.id %>" 
                           class="btn btn-xs btn-primary">
                            Details
                        </a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>